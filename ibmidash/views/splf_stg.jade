include ./includes/header.jade

h1=title

table(class='table table-striped table-hover table-condensed')
  thead
    tr
      th Spoolfile
      th(style="text-align:right") Count
      th(style="text-align:right") Size
  tbody
    - each row in results
      tr
        td: a(href='/jobs_splf/#{row.SPOOLED_FILE_NAME}')=row.SPOOLED_FILE_NAME
        td(style="text-align:right").utility #{_.str.numberFormat(Number(row.SPLF_COUNT), 0, ",", ".")}
        td(style="text-align:right").utility #{_.str.numberFormat(Number(row.SPLF_SIZE), 0, ",", ".")}
          
include ./includes/footer.jade